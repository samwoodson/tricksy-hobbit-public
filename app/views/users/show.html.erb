
<!-- start title area -->
<section id="titleArea">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2>My Dashboard</h2>
      </div>
    </div>
  </div>
</section>
<!-- end title area -->

<!-- start process area -->
<section id="processArea">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-sm-6">

        <div class="btn-group btn-group-lg" role="group" aria-label="...">
          <%= form_for Game.new do |f| %>
            <%= f.submit "New Game" %>
          <% end %>
        </div><p></p>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <form id = "game-form" method="get" action="/games/">
              <div class="input-group">
                <input type="text" name="game_number" class="form-control" placeholder="Enter room ID">
                <span class="input-group-btn">
                  <button class="btn btn-default" type="submit">Join Game</button>
                </span>
              </div><!-- /input-group -->
            </form>
          </div><!-- /.col-md-6 -->
        </div>
      </div>

      <div class="col-md-4 col-sm-6">
        <h2>Games</h2>
        <%= render @user.games %>
      </div>
    </div>
  </div>
</section>
