<header>
  <div class="mid_search">
    <div class="container">
      <div class="row">
        <div class="col-sm-3">
          <%= link_to 'TRIXIE', root_url,  class:"navbar-brand" %>
        </div>
        <div class="col-sm-9">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <nav class="navbar-collapse collapse navbar-right" role="navigation">
            <ul class="nav navbar-nav">
              <% if current_user %>
                <li> <%= link_to "Welcome "+current_user.first_name, "#", id: "Dashboard" %></li>
                <li> <%= link_to image_tag current_user.image , class: "img-circle" %></li>
                <li> <%= link_to "Sign out", signout_path, id: "sign_out" %></li>
              <% else %>
                <li> <%= link_to "Login ", new_session_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
